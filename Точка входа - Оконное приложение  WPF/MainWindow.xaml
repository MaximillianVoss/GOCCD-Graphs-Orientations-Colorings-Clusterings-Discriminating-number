<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Точка_входа___Оконное_приложение__WPF"
        xmlns:CustomControlsWPF="clr-namespace:CustomControlsWPF;assembly=CustomControlsWPF" x:Class="Точка_входа___Оконное_приложение__WPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="374" Width="550">
    <Grid>

        <CustomControlsWPF:LabeledTextBox x:Name="txbVertexCount" Margin="10,10,10,0" VerticalAlignment="Top" Title="Количество вершин" Text=""/>
        <CustomControlsWPF:LabeledTextBox x:Name="txbColorsCount" Margin="10,85,10,0" VerticalAlignment="Top" Text="" Title="Число цветов"/>
        <CustomControlsWPF:LabeledComboBox x:Name="cmbMethod" Margin="10,160,10,0" VerticalAlignment="Top" Title="Метод генерации графов"/>
        <CustomControlsWPF:LabeledProgressBar x:Name="pbProgress" Margin="10,235,10,0" VerticalAlignment="Top" Header="Прогресс выполнения задачи"/>
        <CustomControlsWPF:ButtonPrimary x:Name="btnCalc" Margin="10,0,10,10" Text="Вычислить" Click="ButtonPrimary_Click" Height="40" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
